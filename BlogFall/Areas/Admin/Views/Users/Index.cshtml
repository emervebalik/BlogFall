@model List<ApplicationUser>
@{
    ViewBag.Title = "Kullanıcılar";
    ViewBag.HeaderTitle = "Kullanıcılar";
}

<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kullanıcı Adı</th>
                    <th>Aktif mi?</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model[i].UserName</td>
                        <td>
                            @Html.CheckBox("IsEnabled", Model[i].IsEnabled, new { data_bootstrap_switch="",
                            data_off_color="danger",
                            data_on_color="success",
                            data_off_text="Hayır",
                            data_on_text="Evet"
                       })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script>
        $("input[data-bootstrap-switch]").each(function () {
            $(this).bootstarpSwitch('state', $(this).prop('checked'));
        })
    </script>
    }