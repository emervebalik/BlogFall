@model DashboardIndexViewModel
@{
    ViewBag.Title = "Anasayfa";
    ViewBag.HeaderTitle = "Yönetim Paneli";
}

<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.CategoryCount</h3>
                <p>Kategori</p>
            </div>
            <div class="icon">
                <i class="fas fa-folder"></i>
            </div>
            <a href="@Url.Action("Index","Categories")" class="small-box-footer">Detaylı bilgi <i class="fas fa-f-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.PostCount<sup style="font-size: 20px">%</sup></h3>
                <p>Yazı</p>
            </div>
            <div class="icon">
                <i class="fas fa-pencil"></i>
            </div>
            <a href="@Url.Action("Index","Posts")" class="small-box-footer">Detaylı bilgi <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.userCount</h3>
                <p>Kullanıcı</p>
            </div>
            <div class="icon">
                <i class="fas fa-user"></i>
            </div>
            <a href="#" class="small-box-footer">Detaylı bilgi <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.CommentCount</h3>
                <p>Yorum</p>
            </div>
            <div class="icon">
                <i class="fas fa-comment"></i>
            </div>
            <a href="#" class="small-box-footer">Detaylı bilgi <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>